{
  "name": "cypress-template",
  "version": "1.0.0",
  "description": "Cypress template",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:chrome": "cypress run --browser chrome",
    "tag:smoke": "cypress run --env tags='@smoke'"
  },
  "author": "ncbaral",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^16.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.8.1",
    "typescript": "^5.0.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/step_definitions/**/*.ts"
    ],
    "html": {
      "enabled": true
    }
  }
}
